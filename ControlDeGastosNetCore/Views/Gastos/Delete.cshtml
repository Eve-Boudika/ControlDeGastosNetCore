@model ControlDeGastosNetCore.ViewModels.GastoViewmodel

<h2>Confirmar eliminación</h2>

<p>¿Estás segura de que querés eliminar este gasto?</p>

<dl class="row">
    <dt class="col-sm-2">Detalle</dt>
    <dd class="col-sm-10">@Model.Detalle</dd>

    <dt class="col-sm-2">Monto</dt>
    <dd class="col-sm-10">@Model.Monto.ToString("C")</dd>

    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.Fecha.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Resumen")" class="btn btn-secondary">Cancelar</a>
</form>

