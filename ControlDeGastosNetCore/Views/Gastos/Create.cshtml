@model ControlDeGastosNetCore.ViewModels.GastoViewmodel

@{
    ViewData["Title"] = "Registrar Gasto";
}

<h2>Registrar Gasto</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Monto"></label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" type="date" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Detalle"></label>
        <input asp-for="Detalle" class="form-control" />
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoriaId">Categoría</label>
        <select asp-for="CategoriaId" class="form-control"
                asp-items="Model.Categorias">
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="@Url.Action("Resumen")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
