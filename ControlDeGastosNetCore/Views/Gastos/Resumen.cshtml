@model ControlDeGastosNetCore.DTO.GastosResumenDTO

@{
    ViewData["Title"] = "Gastos por Categoría";
}

<h2 class="mb-4">Gastos por Categoría</h2>
<h3>@Model.Periodo.ToString("MMMM yyyy")</h3>

<form method="get" asp-action="resumen">
    <div class="row mb-3">
        <div class="col-md-4">
            <select name="mes" class="form-select">
                @for (int i = 1; i <= 12; i++)
                {
                    var nombreMes = new DateTime(1, i, 1).ToString("MMMM");
                    <option value="@i" selected="@(i == Model.Periodo.Month ? "selected" : null)">
                        @nombreMes
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <select name="anio" class="form-select">
                @{
                    int anioActual = DateTime.Now.Year;
                    int anioInicio = anioActual - 9;
                }

                @for (int anio = anioActual; anio >= anioInicio; anio--)
                {
                    <option value="@anio" selected="@(anio == Model.Periodo.Year ? "selected" : null)">
                        @anio
                    </option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

@{
    var gastosPorCategoria = Model.Gastos
        .GroupBy(g => g.CategoriaNombre)
        .Select(grupo => new
        {
            NombreCategoria = grupo.Key,
            TotalGastado = grupo.Sum(g => g.Monto),
            Porcentaje = Model.TotalGastado > 0 ? (decimal)grupo.Sum(g => g.Monto) / Model.TotalGastado : 0
        }).ToList();
}

@if (gastosPorCategoria.Any())
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Categoría</th>
                <th>Total Gastado</th>
                <th>Porcentaje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in gastosPorCategoria)
            {
                <tr>
                    <td>@item.NombreCategoria</td>
                    <td>@item.TotalGastado.ToString("C")</td>
                    <td>@item.Porcentaje.ToString("P1")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No hay gastos registrados para este período.</div>
}