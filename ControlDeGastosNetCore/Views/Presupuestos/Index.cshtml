@model IEnumerable<ControlDeGastosMVC.ViewModels.PresupuestoViewModel>

@{
    ViewBag.Title = "Presupuestos";
}

<h2>Presupuestos</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear presupuesto</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mes</th>
            <th>Año</th>
            <th>Importe</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No hay presupuestos creados aún.</td>
            </tr>
        }
        else
        {
            @foreach (var presupuesto in Model)
            {
                <tr>
                    <td>@presupuesto.Mes.ToString("MMMM")</td>
                    <td>@presupuesto.Mes.Year</td>
                    <td>@presupuesto.Monto.ToString("C0")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@presupuesto.Id" class="btn btn-primary btn-sm me-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@presupuesto.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

