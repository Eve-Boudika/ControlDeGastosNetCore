@model IEnumerable<ControlDeGastosMVC.ViewModels.CategoriaViewModel>

@{
    ViewBag.Title = "Categorías";
}

<h2>Categorías</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Crear categoría</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th style="width: 180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>

        @if (!Model.Any())
        {
            <tr>
                <td colspan="2" class="text-center text-muted">No hay categorías creadas aún.</td>
            </tr>
        }

        else
        {
            @foreach (var categoria in Model)
            {
                <tr>
                    <td>@categoria.Nombre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-primary btn-sm me-1">Editar</a>
                        <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
